<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_content"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="1"
        app:title="头像"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="姓名"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="性别"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="生日"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="电话"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="地址"/>


    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_guardian1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="监护人"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_guardian_phone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="联系电话"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_guardian2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="备用监护人"/>

    <com.zmm.tmsystem.ui.widget.CustomInfoItemView
        android:id="@+id/custom_item_guardian_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowPic="0"
        app:title="联系电话"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_select_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_corners_bt"
            android:text="添加学生"
            android:textColor="@color/white"/>

    </RelativeLayout>


</LinearLayout>