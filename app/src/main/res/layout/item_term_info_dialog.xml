<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:layout_margin="10dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_corners_grey"
        android:orientation="vertical"
        android:padding="@dimen/dp_size_30">

        <TextView
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/dp_size_5"
            android:id="@+id/tv_dialog_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="添加托管周期"
            android:textColor="@color/chart_text"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:text="标题："
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/dp_size_15"
                android:id="@+id/et_dialog_title"
                android:layout_width="@dimen/dp_size_250"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners_bg"
                android:hint="请输入标题"
                android:imeOptions="actionDone"
                android:padding="@dimen/dp_size_10"
                android:singleLine="true"
                android:textColor="@color/chart_text"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:text="年份："
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/dp_size_15"
                android:id="@+id/et_dialog_year"
                android:layout_width="@dimen/dp_size_250"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners_bg"
                android:hint="请输入年份"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:padding="@dimen/dp_size_10"
                android:singleLine="true"
                android:textColor="@color/chart_text"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:text="月份："
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/dp_size_15"
                android:id="@+id/et_dialog_month"
                android:layout_width="@dimen/dp_size_250"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners_bg"
                android:hint="请输入月份"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:padding="@dimen/dp_size_10"
                android:singleLine="true"
                android:textColor="@color/chart_text"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:text="学期："
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginLeft="@dimen/dp_size_15"
                android:id="@+id/et_dialog_term"
                android:layout_width="@dimen/dp_size_250"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corners_bg"
                android:hint="请输入学期"
                android:imeOptions="actionDone"
                android:padding="@dimen/dp_size_10"
                android:singleLine="true"
                android:textColor="@color/chart_text"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_size_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="@dimen/dp_size_30"
                android:background="@drawable/shape_corners_bt"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_15"/>

            <Button
                android:layout_marginLeft="@dimen/dp_size_60"
                android:id="@+id/btn_dialog_confirm"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="@dimen/dp_size_30"
                android:background="@drawable/shape_corners_bt"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_15"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>